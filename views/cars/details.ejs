<%- include ../partials/header.ejs %>

<!-- Content for the Details page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

                <div class="form-group">
                    <label for="makeTextField">Make:</label>
                    <strong><%= car.make %></strong>
                </div>
                <div class="form-group">
                    <label for="modelTextField">Model:</label>
                    <strong><%= car.model %></strong>
                </div>
                <div class="form-group">
                    <label for="yearTextField">Year:</label>
                    <strong><%= car.year %></strong>                    
                </div>
                <div class="form-group">
                    <label for="kmTextField">Kilometers:</label>
                    <strong><%= car.kilometers %></strong>
                </div>
                <div class="form-group">
                    <label for="doorsTextField">Doors:</label>
                    <strong><%= car.doors %></strong>                    
                </div>
                <div class="form-group">
                    <label for="seatsTextField">Seats:</label>
                    <strong><%= car.seats %></strong>                    
                </div>
                <div class="form-group">
                    <label for="colorTextField">Color:</label>
                    <strong><%= car.color %></strong>                    
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price:</label>
                    <strong>$ <%= car.price %></strong>                    
                </div>
                <br />
                
                <a href="/cars/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>